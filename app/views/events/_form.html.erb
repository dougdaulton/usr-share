<% color 'green' %>
<%= form_for @event do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.url_field :url %>
  </p>
  <p>
    <%= f.label :room_id %><br />
    <%= select_tag 'event[room_id]', options_for_room_select %>
  </p>
  <p>
    <%= f.label :start_time %><br />
    <%= f.datetime_select :start_time, :default => 24.hours.from_now, :minute_step => 30, :ampm => true %>
  </p>
  <p>
    <%= f.label :duration %><br />
    <%= f.number_field :duration, :min => 1, :max => current_user.admin? ? 48 : 3, :default => 1 %> hours
  </p>
<% admin_content do %>
  <p>
    <%= f.label :is_promoted %><br />
    <%= f.check_box :is_promoted %>
  </p>
<% end %>
  <p><%= f.submit %></p>
<% end %>
